{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": false,
    "removeComments": false,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "outDir": "./dist",
    "baseUrl": "src",
    "paths": {
      "@models/*": ["Models/*"],
      "@interfaces/*": ["Interfaces/*"]
    },
    "incremental": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "sourceMap": false,
    "resolveJsonModule": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
